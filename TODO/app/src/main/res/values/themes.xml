<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/middleBlue</item>
        <item name="colorPrimaryVariant">@color/skyBlueCrayola</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/midnightBlue</item>
        <item name="colorSecondaryVariant">@color/pacificBlue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorTertiary">@color/blizzardBlue1</item>
        <item name="colorOnTertiary">@color/starCommandBlue</item>

        <item name="colorOnBackground">@color/powderBlue</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:headerBackground">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Todo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Todo.ToolbarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Todo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //---------- Setup ----------
    <!-- Setup Edit Text -->
    <style name="setup_edit_text">
        // Dimens
        <item name="android:layout_width">@dimen/setup_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/setup_edit_text_size</item>
        <item name="android:padding">@dimen/setup_edit_text_padding</item>
        <item name="android:layout_margin">@dimen/setup_edit_text_margin</item>

        // Color
        <item name="android:background">@drawable/setup_edit_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/grayLight
        </item>
    </style>

    <!-- Setup Next/Cancel Button -->
    <style name="setup_next_cancel_button">
        // Dimens
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/setup_next_cancel_width</item>

        // Alignment
        <item name="android:layout_below">@id/user_name_setup_edit_text</item>

        // Color
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Setup Theme Spinner -->
    <style name="setup_theme_spinner">
        // Dimens
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>

        // Color
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
    </style>

    <!-- Setup Text View -->
    <style name="setup_text">
        // Dimens
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginHorizontal">@dimen/setup_text_view_margin</item>
        <item name="android:textSize">@dimen/setup_text_view_size</item>

        // Color
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- Setup Theme Spinner Dropdown -->
    <style name="theme_spinner_dropdown">
        // Dimens
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/theme_spinner_width</item>
        <item name="android:textSize">@dimen/setup_text_view_size</item>
        <item name="android:padding">@dimen/setup_spinner_padding</item>

        // Color
        <item name="android:background">@drawable/theme_spinner_text_view</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        // Text
        <item name="android:text">@string/dummy_spinner_text</item>
    </style>

    <!-- Setup Radio Group -->
    <style name="setup_radio_group">
        // Dimens
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Setup Radio Button -->
    <style name="setup_radio_button">
        // Dimens
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/setup_radio_button_text</item>

        // Color
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!--Setup Image View -->
    <style name="setup_image_view">
        // Dimens
        <item name="android:layout_width">@dimen/setup_image_view_dimens</item>
        <item name="android:layout_height">@dimen/setup_image_view_dimens</item>
    </style>

    <!-- Setup Choose Image Button -->
    <style name="setup_choose_image_button">
        // Dimens
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/setup_image_view_dimens</item>
        <item name="android:layout_marginVertical">@dimen/setup_choose_image</item>

        // Alignment
        <item name="android:layout_below">@id/setup_profile_image</item>
        <item name="android:layout_centerHorizontal">true</item>

        // Text
        <item name="android:text">@string/choose_image_button</item>

        // Color
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    //---------- Home ----------
    <!-- List Title -->
    <style name="list_title">
        // Dimens
        <item name="android:textSize">@dimen/todo_list_title</item>
        <item name="android:padding">@dimen/todo_list_padding</item>
        <item name="android:layout_margin">@dimen/list_preview_margin</item>

        // Text
        <item name="android:text">@string/dummmy_list_title</item>
        <item name="android:textStyle">bold</item>

        // Color
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- List Preview Info -->
    <style name="list_preview_info">
        // Dimens
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_preview_item_text_size</item>
        <item name="android:padding">@dimen/list_preview_owner_padding</item>

        // Color
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
    </style>

    //---------- Splash Screen ----------
    <!-- Loading TextView -->
    <style name="loading_text">
        // Dimens
        <item name="android:textSize">@dimen/loading_text_size</item>
        <item name="android:layout_margin">@dimen/loading_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        // Text
        <item name="android:textStyle">bold|italic</item>

        // Color
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    //---------- List Fragment ----------
    <!-- List Item Recycler -->
    <style name="list_item_recycler">
        // Dimens
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/list_fragment_margin</item>

        // Color
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <!-- List Title -->
    <style name="list_title_edit_text">
        // Dimens
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
        <item name="android:layout_margin">@dimen/list_fragment_margin</item>

        // Text
        <item name="android:text">@string/dummmy_list_title</item>
        <item name="android:textStyle">bold</item>

        // Color
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- List Item -->
    <style name="list_new_item">
        // Dimens
        <item name="android:layout_width">@dimen/list_new_item_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/list_fragment_margin</item>
        <item name="android:textSize">@dimen/list_new_item_text_size</item>

        // Text
        <item name="android:hint">@string/list_new_item_hint</item>

        // Color
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textColorHint">?attr/colorOnTertiary</item>
    </style>

    <!-- Uncheck All -->
    <style name="list_uncheck_all_button">
        // Dimens
        <item name="android:layout_width">@dimen/list_uncheck_all_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/list_fragment_margin</item>
        <item name="android:textSize">@dimen/list_uncheck_all_text_size</item>

        // Text
        <item name="android:text">@string/list_uncheck_all</item>

        // Color
        <item name="android:backgroundTint">?attr/colorOnTertiary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>