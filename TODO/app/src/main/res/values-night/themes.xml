<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midnightBlue</item>
        <item name="colorPrimaryVariant">@color/powderBlue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skyBlueCrayola</item>
        <item name="colorSecondaryVariant">@color/darkCornflowerBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background Color. -->
        <item name="colorOnBackground">?attr/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //---------- Setup ----------
    <style name="setup_edit_text">

        // Dimens
        <item name="android:layout_width">@dimen/setup_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/setup_edit_text_size</item>
        <item name="android:padding">@dimen/setup_edit_text_padding</item>

        // Color
        <item name="android:background">@drawable/setup_edit_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/grayDark</item>
    </style>
</resources>