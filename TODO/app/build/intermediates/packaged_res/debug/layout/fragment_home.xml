<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground">

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/todo_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/todo_list_margin"
        android:padding="@dimen/todo_list_padding"
        android:background="?attr/colorOnBackground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/new_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="?attr/colorPrimary"
        android:src="@drawable/ic_add" />

</RelativeLayout>